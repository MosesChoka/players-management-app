<div class="container mt-4 p-5 bg-secondary text-white rounded">
  
  <%= image_tag(@sportsperson.image_as_thumbnail) %>
  <h1>
    <%= @sportsperson.firstname %>
    <%= @sportsperson.lastname %>
  </h1>
  <br/>
  <p class="lead">
    <%= @sportsperson.birthdate %>
  </p>

  <p class="lead">
    <%= @sportsperson.phone %> |
    <%= @sportsperson.email %>
  </p>

  <p class="lead">
    <%= @sportsperson.team %> |
    <%= @sportsperson.position %>
  </p>

  <div>
    <% if admin_signed_in? %>
      <%= link_to "Edit player info", edit_sportsperson_path(@sportsperson), class:"btn btn-primary" %> |
      <%= button_to "Delete player", @sportsperson, method: :delete, class:"btn btn-primary" %>
    <% else %>
      <%= link_to "Back to players", sportspeople_path, class:"btn btn-primary" %>
    <% end %>
  </div>
</div>
